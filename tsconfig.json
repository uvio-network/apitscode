{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": false,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
